<div class="container">
	<div class="row">
		<div class="col-xs-3">

			<p id="notice"><%= notice %></p>

			<% if @book.errors.any? %>
				<div ="error_explanation">
					<h3><%= @book.errors.count %> error prohibited this obj from being saved:</h3>
					<ul>
						<% @book.errors.full_messages.each do |message| %>
							<li><%= message %></li>
						<% end %>
					</ul>
				</div>
			<% end %>

			<h2>User info</h2>
			<%= render 'users/profile', user: @user %>

			<h2>New book</h2>
			<%= render 'books/newform' %>

		</div>

		<div class="col-xs-9">
			<h2>Book detail</h2>

			<table class="table">
				<tbody>
					<% if @user.id==current_user.id %>
					<tr>
						<td>
							<%= link_to (@book_id.user) do %>
							<%= attachment_image_tag(@book_id.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
							<%= @book_id.user.name %>
							<% end %>
						</td>
						<td><%= @book_id.title %></td>
						<td><%= @book_id.body %></td>
						<td><%= link_to "Edit",edit_book_path(@book_id), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
						<td><%= link_to "Destroy",book_path, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
					</tr>
					<% else %>
					<tr>
						<td class="col-md-3"><%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg" ,class: "img-responsive" %><%= link_to @user.name,user_path(@user.id),class: "user_#{@user.id}" %> </td>
						<td class="col-md-4"><%= @book_id.title %></td>
						<td class="col-md-5"><%= @book_id.body %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>

